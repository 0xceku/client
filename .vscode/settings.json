{
  "files.autoSave": "onFocusChange", // Autosave prevents problems like git pull or prettier causing conflicts with unsaved code
  "editor.formatOnSave": true, // Run Prettier whenever you save, so you never have to do it manually. NOTE you can do `cmd-k + s` to save without formatting if you ever need to.
  // "javascript.inlayHints.parameterNames.enabled": "all", // Strongly recommended for Anchor's many many arguments in functions
  "typescript.preferences.importModuleSpecifier": "non-relative", // Use tsconfig paths when available
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "search.exclude": {
    // Exclude non-source junk from searches.
    ".yarn/**": true
  },
  // Set Prettier as the default for every language it supports (that we use)
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  }
}
